<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.forks.IngredientFragment"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/upperFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp">

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id = "@+id/ingredientParent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id = "@+id/ingredientUpload0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">
                <EditText
                    android:id="@+id/ingredientBox"
                    android:layout_width="@dimen/ingredientBoxWidth"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:maxLines="1"
                    android:inputType="text" />

                <EditText
                    android:id="@+id/amountBox"
                    android:layout_width="@dimen/ingredientBoxWidth"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="30dp"
                    android:ems="10"
                    android:maxLines="1"
                    android:inputType="text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <Button
                    android:id="@+id/ingAddBtn"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Add More" />

                <Button
                    android:id="@+id/ingRemoveBtn"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:text="Remove" />
            </LinearLayout>

            <Button
                android:id="@+id/next3"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:enabled="false"
                android:text="Next" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>

